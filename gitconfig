[push]
  default = current

[color]
  ui = auto

[core]
  autocrlf = input
  excludesfile = ~/.gitignore
  pager = delta --theme 'Monokai Extended'

[commit]
  template = ~/.gitmessage

[fetch]
  prune = true

[rebase]
  autosquash = true

[diff]
  colorMoved = zebra

[pager]
  branch = false

[include]
  path = ~/.gitconfig.local
  path = ~/.gitaliases

[interactive]
  diffFilter = delta --color-only --theme 'Monokai Extended'
