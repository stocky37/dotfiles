# Unix
alias mkdir="mkdir -p"
alias e="$EDITOR"
alias v="$VISUAL"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# Common typos
alias gti=git

alias gpg=gpg2
alias base64="base64 -w 0"
alias ssh-finger="ssh-keygen -l -E md5 -f"

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local

